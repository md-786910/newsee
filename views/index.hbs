        width: 150%;
    }
    .addinsertclass{
        height:50em; 
        width: 180%;
        margin-right: 10px;
        text-align: center;
    }
    .image_container{
        z-index: -1;
        width: 105%;
    position: relative;
    right: 4.5em;

    }
}
