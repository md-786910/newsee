    <style>
        *{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
body{
    background-image: url('../static/mdImage.jpg');
}
a{
    color: white !important;
    stroke: white ;
    font-weight: 500;
    font-family: Arial, Helvetica, sans-serif;
}
a:hover{
    text-decoration: underline !important;
}
span {
    font-size: 35px !important;
    color: rgb(255, 255, 255) !important;
    font-family: 'Ubuntu Condensed', sans-serif !important;
}
.welcome h1{
    font-family: 'Ubuntu Condensed', sans-serif !important;
    font-size:40px;
    padding-top: 30px !important;
}
.navfixed{

    position: fixed ;
    top: -1rem;
    width: 100%;
    /* top: 2em ; */
    background-color: rgb(223, 0, 130);
}
.addinsertclass{
    /* padding: 20px; */
    border: 1px solid rgb(194, 54, 54);
    height:37em;
 
    margin-top: -100px;
}

.image_container{
display: flex;
flex-direction: row;
/* width: 100%; */
flex-wrap: wrap;
}
.img_continer{
    font-size: 30px;
    display: block;
    width: 100%;
    height: 340px !important;
    height: 100vh;
}
.imageback{
    height: 25em;
    width: 100%;
}
/* fooetr */
footer{
    background-color: rgb(95, 102, 95);
    width: 100%;
    position: fixed;
    z-index: 1;
   
    bottom: -5em;
    height: 20vh;
}
.footer_div{
    margin-top:-20px ;
}

@media screen and (max-width:430px) {
    .welcome h1{
        position: relative;
        top: 2em;z-index: -1;
        text-align: center;
        width: 150%;
    }
    .addinsertclass{
        height:44em; 
        width: 180%;
        margin-right: 10px;
        text-align: center;
    }
    .image_container{
        z-index: -1;
        width: 103%;
    position: relative;
    right: 4.5em;

    }
}
@media screen and (max-width:373px) {
    .welcome h1{
        position: relative;
        top: 2em;z-index: -1;
